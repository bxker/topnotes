{
  "compilerOptions": {
      "module": "CommonJS",
      "esModuleInterop": true,
      "strict": true,
      "resolveJsonModule": true,
      "target": "ES2018",
      "types": [
          "node",
          "jest"
      ],
      "typeRoots": [
          "./types",
          "node_modules/@types"
      ],
      "lib": [
          "ES2015",
          "es2016",
          "ES2017",
          "ES2018",
          "ESNext",
          "DOM"
      ],
      "noImplicitAny": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./app/",
      "paths": {
          "*": [
              "node_modules/*"
          ]
      }
  },
  "include": [
      "index.ts",
      "src",
      "server", "node_modules/db"
  ]
}